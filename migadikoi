using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApplication4
{
    class Program
    {
        public class Numbers
        {
            private double a;


            ////////////////////

            public double Real
            {
                get { return a;}
                set { a = value;}
            }


            private double b;


            ////////////////////

            public double Imaginary
            {
                get { return b; }
                set { b = value; }
            }



            public Numbers()
            {
                a = 0;
                b = 0;
            }

            public Numbers(double x)
            {
                a = x;
                b = 0;
            }

            public Numbers(double x, double y)
            {
                a = x;
                b = y;
            }

            public Numbers Add(Numbers x, Numbers y)
            {
                double r = x.Real + y.Real;
                double i = x.Imaginary + y.Imaginary;
                return new Numbers(r, i);
            }
            
           
        }
        static void Main(string[] args)
        {
        }
    }
}
